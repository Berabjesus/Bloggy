<%= form_for @blog, html: {class: 'form-horizontal pl-2'} do |f|%>
  <div class = 'form-group'>
    <%= f.label :title%>
    <%= f.text_field :title, class: 'form-control'%>
  </div>

  <div class = 'form-group'>
    <%= f.label :content%>
    <%= f.text_area :content,  class: 'form-control',  cols: "100", rows: "10"%>
  </div>

  <%= f.submit%>
  <div>
    <% if @blog.errors.any?%>
    <div class="alert alert-danger">
      <% @blog.errors.full_messages.each do |error|%>
      <p class="larger-text"><%= error%></p>
      <%end%>
    </div>
    <%end%>
  </div>
<%end%>