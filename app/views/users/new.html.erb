<div class="border bg-light mt-3 col-sm-5 mx-auto">
  <h1 class="my-4">Sign Up</h1>
  <%= form_for @user, html: {class: 'form-horizontal'} do |f|%>
    <div class="form-group">
      <%= f.label "User name: "%>
      <%= f.text_field :name, placeholder: 'Your name here', class: 'form-control'%>  
    </div>
    <div class="form-group">
      <%= f.label "Password: "%>
      <%= f.password_field :password_digest, placeholder: 'Your password here', class: 'form-control'%>  
    </div>
    <div class="form-group w-100 text-center">
      <%= f.submit "GO!", class: 'btn btn-success w-25'%>
    </div>
  <%end%>
  <% if @user.errors.any?%>
    <% @user.errors.full_messages.each do |error| %>
      <li class="text-danger"><%= error %></li>
    <% end %>
  <% end %>
</div>
